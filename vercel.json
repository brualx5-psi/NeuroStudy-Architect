{
    "rewrites": [
        {
            "source": "/api/extension/callback",
            "destination": "/api/extension?action=callback"
        },
        {
            "source": "/api/extension/authorize",
            "destination": "/api/extension?action=authorize"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}