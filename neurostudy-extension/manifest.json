{
    "manifest_version": 3,
    "name": "NeuroStudy Capture",
    "version": "1.0.0",
    "description": "Capture transcrições de vídeos de cursos online e envie diretamente para seu estudo no NeuroStudy",
    "permissions": [
        "activeTab",
        "storage",
        "identity"
    ],
    "host_permissions": [
        "https://neurostudy.com.br/*",
        "https://www.neurostudy.com.br/*",
        "https://*.hotmart.com/*",
        "https://*.hotmart.club/*",
        "https://*.eduzz.com/*",
        "https://*.kiwify.com.br/*",
        "https://*.nutror.com/*",
        "https://*.memberkit.com.br/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "NeuroStudy Capture"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}